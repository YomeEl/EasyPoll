@{
    @using Microsoft.AspNetCore.Mvc;
    @using Microsoft.EntityFrameworkCore;

    ViewData["Title"] = "Активный опрос";

    var activePoll = (EasyPoll.Models.PollModel)ViewData["ActivePoll"];
    var question1 = EasyPoll.Data.ServiceDBContext.GetDBContext().Questions.FirstOrDefault(question => question.Id == activePoll.Id);
    var answers = question1.GetAnswers();
    var totalCount = question1.GetTotalAnswersCount();

    const string NO_DISPLAY = "display:none";

    string percentage(int cnt)
    {
        return $"{(100f * cnt / totalCount).ToString("F1")}%".Replace(',', '.');
    }

    var voted = (int)ViewData["Selected"] != -1;
}

<div class="question">
    @question1.Question
</div>
<br>

@{
    for (int i = 0; i < answers.Count; i++)
    {
        var answer = answers[i];
        var barStyle = "";
        var answerText = answer.Text;

        if (voted)
        {
            answerText += $" ({percentage(answer.Count)})";
            barStyle = $"width:{(voted ? @percentage(answer.Count) : "100%")};";
            if ((int)ViewData["Selected"] == i)
            {
                barStyle += "background-color: #FF0000;";
            }
        }

        string answerBoxClass;
        string answerBoxOnClick;
        if (voted)
        {
            answerBoxClass = "answer-box";
            answerBoxOnClick = "";
        }
        else
        {
            answerBoxClass = "answer-box-active";
            answerBoxOnClick = $"onclick=location.href='Poll?answer={i}'";
        }

        <div class="@answerBoxClass" @answerBoxOnClick>
            <label class="answer-text">@(i + 1). </label>
            @{
                if (voted)
                {
                    <label class="answer-text">@answerText</label>
                }
                else
                {
                    <a class="answer-text">@answerText</a>
                }
            }
            <div class="answer-bar" style="@(voted ? "" : NO_DISPLAY)">
                <div class="answer-bar-result" style="@barStyle"></div>
            </div>
        </div>
    }
}

<br>
<div class="question">Проголосовало: @totalCount</div>
<br>
<div class="btn-container">
    <div class="btn-common" onclick="location.href='@Url.Action("Logout", "Authentification")'">
        <label class="btn-text">Выход</label>
    </div>
    <div class="btn-common" onclick="location.href='@Url.Action("ControlPanel", "Settings")'">
        <label class="btn-text">Панель управления</label>
    </div>
</div>